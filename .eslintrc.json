{
  "extends": ["eslint-config-prettier", "next/core-web-vitals"],
  "plugins": ["eslint-plugin-prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false
      }
    ],
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": "off",
    "max-len": ["error", {"code": 120, "ignoreUrls": true}]
  }
}
